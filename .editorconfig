root = true

[*]
charset                  = utf-8
end_of_line              = lf
insert_final_newline     = true
trim_trailing_whitespace = true

[*.{md, mdx, txt, rst, mediawiki}]
trim_trailing_whitespace = false

[*.{json, yml, yaml, txt}]
max_line_length = 160
indent_style = space
indent_size  = 2

[*.{bat, ps1}]
indent_style = space
indent_size  = 4

[*.{bat, ps1}]
end_of_line = crlf
